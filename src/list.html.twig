<div class="container-fluid container-fluid-zero-padding">
    <h1 class="list-title">
        {{ section_name }}
    </h1>

    <div class="">
        {% if categories|default([])|length > 1 %}
            <div class="list-categories">
                <div class="list-categories-items">
                    <p>Filtrer</p>
                    <div class="list-categories-items-div">
                        {% for category in categories %}
                                <a href="{{ category.url }}" class="{{ category.isActive ? 'list-categories-item-link-active' }}">{{ category.name }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
    
    
        <div class="list-items">
            {% for item in items %}
                <div class="list-items-item">
                    <a href="{{ item.url }}" class="streched-link list-items-item-link">
                        <div class="list-items-item-box">
                            <div class="row align-items-center">
                                <div class="col-md-10 mb-3 mb-md-0">
                                    <h2 class="list-items-item-title">
                                        <svg width="54" height="54" viewBox="0 0 54 54" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <rect width="54" height="54" rx="27" fill=""/>
                                            <path d="M28.0906 34L27.1063 33.0284L31.1588 28.9759H20.6631V27.5696H31.1588L27.1063 23.5298L28.0906 22.5455L33.8179 28.2727L28.0906 34Z" fill="#2D0F0C" fill-opacity="0.6"/>
                                        </svg>
                                        {{ item.title }}
                                    </h2>

                                </div>
                                <div class="col-md-2 col-md-2-img">
                                    {% if item.video|default(null) and item.video[0] == 'youtube' %}
                                        <div class="list-items-item-video"
                                             style="background-image: url('https://i1.ytimg.com/vi/{{ item.video[1] }}/hqdefault.jpg')">
                                            <div class="list-items-item-video-icon"
                                                 style="background: url('{{ play_icon }}') 50% 50% no-repeat transparent">
                                                <div class="list-items-item-video-inner" style="width: 1110px; height: 705px"></div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <img src="{{ item.image|default(default_list_image) }}"
                                             class="list-items-item-image" width="1700" height="1080" />
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                <div class="list-items-none">
                    {{ no_items_message }}
                </div>
            {% endfor %}

            <div class="list-items-pagination">
                <div class="row">
                    <div class="col-6">
                        {% if previous %}
                            <a href="{{ previous }}" class="btn btn-secondary">
                                <i class="fal fa-angle-left"></i>
                                <span class="ml-1">
                                {{ 'base.pagination.previous'|trans }}
                            </span>
                            </a>
                        {% endif %}
                    </div>
                    <div class="col-6 text-right">
                        {% if next %}
                            <a href="{{ next }}" class="btn btn-secondary">
                            <span class="mr-1">
                                {{ 'base.pagination.next'|trans }}
                            </span>
                                <i class="fal fa-angle-right"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
